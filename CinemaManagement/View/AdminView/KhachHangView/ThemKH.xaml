<Window x:Class="CinemaManagement.View.ThemKH"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" xmlns:adminvm="clr-namespace:CinemaManagement.ViewModel.AdminVM" d:DataContext="{d:DesignInstance Type=adminvm:QuanLyPhimVM}"
        xmlns:local="clr-namespace:CinemaManagement.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Name="themKhachHangWindow"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="ThemKH" 
        Height="320" 
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        DataContext="{StaticResource CustomerVM}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetCurrentWindow}"
                               CommandParameter="{Binding ElementName=themKhachHangWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border CornerRadius="30" Background="#ffffff">
        <Grid>
            <StackPanel>
                <TextBox materialDesign:HintAssist.FloatingScale="0.50" materialDesign:TextFieldAssist.TextBoxViewMargin="20 0 1 0"
                         FontSize="20"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="Thêm khách hàng"
                         IsReadOnly="True"
                         FontWeight="SemiBold"
                />

                <!-- Thông tin nhân viên -->
                <TextBlock Text="Thông tin cá nhân" FontSize="15" Margin="10" FontWeight="DemiBold"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Họ và tên" Margin="10 10 0 0"/>
                    <TextBox materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" FontSize="15"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="253" Height="21"
                             Text="{Binding KhTen}"
                             Margin="40 0 0 0"
                             Padding="0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Số điện thoại" Margin="10 10 0 0"/>
                    <TextBox materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" FontSize="15"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="253" Height="21"
                             Margin="20 0 0 0"
                             Text="{Binding KhSDT}"
                             Padding="0" TextChanged="TextBox_TextChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Email" Margin="10 10 0 0"/>
                    <TextBox materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" FontSize="15"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="253" Height="21"
                             Margin="60 0 0 0"
                             Text="{Binding KhEmail}"
                             Padding="0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Giới tính" Margin="10 10 0 0"/>
                    <ComboBox ItemsSource="{Binding GenderOptions}" SelectedItem="{Binding KhGioiTinh}" 
                              Style="{StaticResource MaterialDesignComboBox}" Width="130" Height="26"
                              Margin="40 0 0 0">
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Ngày sinh" Margin="10 10 0 0"/>
                    <DatePicker 
                     Width="130"
                    SelectedDate="{Binding KhNgaySinh, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint=""
                     materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                  Margin="17 0 0 0"
                 Height="26"
                 Padding="0"/>
                </StackPanel>


                <StackPanel Orientation="Horizontal" Margin="250 30 0 0">
                    <Button BorderThickness="0" Width="57" Padding="0" Command="{Binding SaveNewCustomerCM}" CommandParameter="{Binding ElementName=themKhachHangWindow}">
                        <TextBlock Text="Xác nhận" FontSize="10"/>
                    </Button>
                    <Button BorderThickness="0" Margin="20 0 0 0" Width="57" Padding="0" Background="#FFD93434" Command="{Binding CloseWindowCM}" CommandParameter="{Binding ElementName=themKhachHangWindow}">
                        <TextBlock Text="Hủy bỏ" FontSize="10"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
